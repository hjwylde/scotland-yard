<% @players.each do |player| %>
  <div class="<%= player_classes(player: player).join(' ') %>" data-id="<%= player.id %>">
    <header>
      <h3><%= player.name %></h3>
      <%= show_player_current_node(player: player) %>
    </header>

    <div class="tickets">
      <p>Tickets:</p>
      <%= show_player_tickets_count(player: player) %>
    </div>

    <div class="moves">
      <%= show_player_moves(player: player) %>
    </div>
  </div>
<% end %>

